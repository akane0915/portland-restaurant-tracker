<h1><%= @location.neighborhood %></h1>
<form action="/locations/<%=@location.id%>" method="post">
  <input name="_method" type="hidden" value="delete">
  <button class="btn btn-default">Delete This Location</button>
</form>
<br>

<% if @location.restaurants.any? %>

<table class="table">
    <thead>
      <tr>
        <th>Restaurant Name</th>
        <th>Price Range (1-5)</th>
      </tr>
    </thead>
    <tbody>
      <% @location.restaurants.each do |restaurant| %>

        <tr>
          <td><%=restaurant.name%></td>
          <td><%=restaurant.price%></td>
        </tr>

      <% end %>
    </tbody>
  </table>

<% else %>
<p>No restaurants have been added to this location yet!</p>
<% end %>

<hr>
<a class = "btn btn-default" href="/restaurants/new">Add a Restaurant</a>
