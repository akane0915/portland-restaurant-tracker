<!-- List of all Restaurants -->
<% if @restaurants.any? %>

  <table class="table">
      <thead>
        <tr>
          <th>Restaurant Name</th>
          <th>Price Range (1-5)</th>
          <th>Cuisine Type</th>
          <th>Location</th>
        </tr>
      </thead>
      <tbody>
        <% @restaurants.each do |restaurant| %>

          <tr>
            <td><%=restaurant.name%></td>
            <td><%=restaurant.price%></td>
            <td><%=restaurant.cuisine.cuisine_type%></td>
            <td><%=restaurant.location.neighborhood%></td>
          </tr>

        <% end %>
      </tbody>
    </table>

<% else %>
  <p>No restaurants have been created yet!</p>
<% end %>
<hr>

<a class="btn btn-default" href="/">Return Home</a>
