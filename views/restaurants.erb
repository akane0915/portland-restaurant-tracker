<!-- List of all Restaurants -->
<% if @restaurants.any? %>

  <table class="table">
      <thead>
        <tr>
          <th>Restaurant Name</th>
          <th>Price Range (1-5)</th>
          <th>Cuisine Type</th>
          <th>Location</th>
        </tr>
      </thead>
      <tbody>
        <% @restaurants.each do |restaurant| %>

          <tr>
            <td><a href="/restaurant/<%=restaurant.id%>"><%=restaurant.name%></a></td>
            <td><%=restaurant.price%></td>
            <td>
              <% if restaurant.cuisine%>
                  <%=restaurant.cuisine.cuisine_type%>
              <% else %>
              <% end %>
            </td>
            <td>
              <% if restaurant.location%>
                  <%=restaurant.location.neighborhood%>
              <% else %>
              <% end %>
            </td>
          </tr>

        <% end %>
      </tbody>
    </table>

<% else %>
  <p>No restaurants have been created yet!</p>
<% end %>
<br>
<a class = "btn btn-default" href="/restaurants/new">Add a Restaurant</a>

<hr>
<a class="btn btn-default" href="/">Return Home</a>
